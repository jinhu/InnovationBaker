<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="dev.chimera.innovation"
      android:versionCode="1"
      android:versionName="1.0">

    <!-- <uses-permission android:name="com.android.vending.BILLING" /> -->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.NFC"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>

    <uses-feature
            android:name="android.hardware.nfc"
            android:required="false"/>
    <uses-feature
            android:name="android.hardware.bluetooth"
            android:required="false"/>
    <uses-feature
            android:name="android.hardware.telephony"
            android:required="false"/>
    <uses-feature
            android:name="android.hardware.touchscreen"
            android:required="false"/>
    <uses-feature
            android:name="android.hardware.location"
            android:required="false"/>
    <uses-feature
            android:name="android.hardware.location.gps"
            android:required="false"/>

    <uses-sdk
            android:minSdkVersion="15"
            android:targetSdkVersion="19">
    </uses-sdk>

    <application
            android:icon="@drawable/beker"
            android:label="@string/app_name"
            android:taskAffinity="com.altran.nfc.tagwriter"
            android:theme="@style/Theme.White">

        <activity android:name="dev.chimera.innovation.BakerActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.WelcomeScreen"
                android:label="@string/app_name"
                android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.TagWriterPreferences"
                android:finishOnTaskLaunch="true"/>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.TagWriterTermsNotices"
                android:finishOnTaskLaunch="true"/>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.ExternalInvocationActivity"
                android:finishOnTaskLaunch="true"
                android:launchMode="singleTop">
            <intent-filter>
                <action android:name="com.altran.nfc.tagwriter.WRITE_NDEF"/>
                <!--
                     When using this action, present your data in
                     an extra named "android.nfc.extra.NDEF_MESSAGES".
                     This should contain a Parcelable[] with NdefMessage inside.
                     An alternative is to put a Uri to an NdefMessage byte array
                     in the Intent data. The same goes for com.android.intent.SEND
                -->
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="vnd.android.cursor.item/ndef_msg_mime"/>
            </intent-filter>
            <!-- Intercept links from the browser, for example -->
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="text/plain"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="text/x-vcard"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="vnd.nfc/ndef_msg_mime"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                        android:host="www.nxp.com"
                        android:pathPrefix="/tagwriter_history/"
                        android:scheme="http"/>
            </intent-filter>
        </activity>

        <activity-alias
                android:name=".activities.TagAppInteraction"
                android:enabled="false"
                android:targetActivity="com.altran.nfc.tagwriter.activities.ExternalInvocationActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="vnd.android.cursor.item/ndef_msg"/>
            </intent-filter>
        </activity-alias>

        <!-- this activity is needed for importing data from mail -->
        <activity
                android:name="com.altran.nfc.tagwriter.activities.ExternalHistoryActivity"
                android:finishOnTaskLaunch="true"
                android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="*/*"/>
                <data
                        android:host="*"
                        android:pathPattern=".*\\.twdb"
                        android:scheme="file"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:mimeType="application/twdb"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.HelpActivity"
                android:finishOnTaskLaunch="true"
                android:launchMode="singleTop"/>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.AboutActivity"
                android:finishOnTaskLaunch="true"
                android:launchMode="singleTop"/>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.ConfirmLicenseActivity"
                android:finishOnTaskLaunch="true"
                android:launchMode="singleTop"/>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.ConfirmNoNfcActivity"
                android:finishOnTaskLaunch="true"
                android:launchMode="singleTop"/>
        <!--
        <activity
            android:finishOnTaskLaunch="true"
            android:launchMode="singleTop"
            android:name=".activities.UpgradesActivity" />
        -->
        <activity
                android:name="com.altran.nfc.tagwriter.activities.DashboardActivity"
                android:configChanges="locale"
                android:finishOnTaskLaunch="false"
                android:launchMode="singleTop">


        </activity>

        <activity-alias
                android:name=".NfcDiscovery"
                android:enabled="false"
                android:targetActivity="com.altran.nfc.tagwriter.activities.DashboardActivity">

            <!-- Mail intent filter -->
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>

                <data android:scheme="mailto"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <!-- URL intent filter -->
            <intent-filter android:priority="-101">
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>

                <data android:scheme="http"/>
                <data android:scheme="https"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <!-- Added 21-12-12 -->
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>

                <data android:scheme="sms"/>
                <data android:scheme="smsto"/>
                <data android:scheme="tel"/>
                <data android:scheme="geo"/>
                <data android:scheme="file"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>

                <data android:mimeType="text/plain"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>

                <data android:mimeType="text/x-vcard"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
            <!-- Stop 21-12-12 -->

            <meta-data
                    android:name="android.nfc.action.TECH_DISCOVERED"
                    android:resource="@xml/filter_nfc"/>
        </activity-alias>

        <activity
                android:name="com.altran.nfc.tagwriter.activities.ToolsActivity"
                android:finishOnTaskLaunch="true"
                android:launchMode="singleTop"/>


        <activity
                android:name="com.altran.nfc.tagwriter.activities.TagHistoryActivity"
                android:finishOnTaskLaunch="false"
                android:launchMode="singleTop"/>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.ContactOptionsActivity"
                android:finishOnTaskLaunch="false"
                android:launchMode="singleTop"
                android:theme="@style/Theme.Contact"/>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.ShareActivity"
                android:finishOnTaskLaunch="false"
                android:launchMode="singleTop"/>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.ChooseContentTypeActivityDynamic"
                android:finishOnTaskLaunch="false"
                android:launchMode="singleTop"/>
        <!--
              Important: The following 3 activities are accessible from other apps by launching an
              intent. To make sure NFC intents are routed correctly to these activities when they
              have been launched by another app when another instance of TagWriter is also running,
              we have to set taskAffinity to ""
        -->
        <activity
                android:name="com.altran.nfc.tagwriter.activities.WriteParametersActivity"
                android:finishOnTaskLaunch="false"
                android:launchMode="singleTop"
                android:taskAffinity=""/>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.ConfirmOldContentActivity"
                android:finishOnTaskLaunch="false"
                android:launchMode="singleTop"
                android:taskAffinity=""/>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.ChooseVersionActivity"
                android:finishOnTaskLaunch="false"
                android:launchMode="singleTop"
                android:taskAffinity="">
            <intent-filter>
                <action android:name="com.activity.ChooseVersionActivity"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.WriterActivity"
                android:finishOnTaskLaunch="true"
                android:launchMode="singleTop"
                android:taskAffinity="">
            <intent-filter>
                <action android:name="com.altran.nfc.tagwriter.WRITE"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.altran.nfc.tagwriter.ERASE"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.altran.nfc.tagwriter.PROTECT"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.altran.nfc.tagwriter.INSPECT"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.createcontent.EditTagActivity"
                android:finishOnTaskLaunch="true"
                android:launchMode="singleTop"
                android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="com.altran.nfc.tagwriter.CREATE"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.createcontent.BookmarkListActivity"
                android:finishOnTaskLaunch="true"
                android:launchMode="singleTop"
                android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="com.altran.nfc.bookmarks.PICK"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.createcontent.BluetoothListActivity"
                android:finishOnTaskLaunch="true"
                android:launchMode="singleTop"
                android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.QrCodeAskOptionsActivity"
                android:finishOnTaskLaunch="false"
                android:launchMode="singleTop">
        </activity>

        <service android:name="com.altran.nfc.tagwriter.service.TagHistoryService">
        </service>
        <service
                android:name="com.altran.nfc.tagwriter.service.SmsService"
                android:permission="android.permission.SEND_SMS">
        </service>

        <provider
                android:name="com.altran.nfc.tagwriter.providers.TagHistoryProvider"
                android:authorities="com.altran.nfc.tagwriter.providers.TagHistoryProvider"
                android:multiprocess="false"
                android:syncable="false"/>

        <service android:name="com.altran.nfc.tagwriter.prch.MarketService"/>

        <receiver android:name="com.altran.nfc.tagwriter.prch.MarketReceiver">
            <intent-filter>
                <action android:name="com.android.vending.billing.IN_APP_NOTIFY"/>
                <action android:name="com.android.vending.billing.RESPONSE_CODE"/>
                <action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED"/>
            </intent-filter>
        </receiver>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.HistoryActivity"
                android:finishOnTaskLaunch="false"
                android:launchMode="singleTop">
        </activity>
        <activity
                android:name="com.altran.nfc.tagwriter.activities.BtPairConnectActivity"
                android:finishOnTaskLaunch="false"
                android:launchMode="singleTop">
        </activity>
    </application>

</manifest>
